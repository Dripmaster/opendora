LOG_LEVEL=info

# Required: Discord bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=REPLACE_WITH_DISCORD_BOT_TOKEN
NATURAL_CHAT_ENABLED=true
HITL_REQUIRED=false
HITL_TTL_SEC=600

DEFAULT_REPO_PATH=/absolute/path/to/your/repo
CONTEXT_OFFLOAD_ENABLED=true
CONTEXT_STORE_DIR=.opendora/context
CONTEXT_MAX_ESTIMATED_TOKENS=12000
CONTEXT_KEEP_RECENT_MESSAGES=10
CONTEXT_RETRIEVE_TOP_K=4
CONTEXT_CHANNEL_ROTATION_ENABLED=true
CONTEXT_CHANNEL_ROTATION_MAX_OFFLOADS=24
CONTEXT_CHANNEL_ROTATION_MAX_LIVE_MESSAGES=80
CONTEXT_ACTIVE_CATEGORY_NAME=opendora-active
CONTEXT_ARCHIVE_CATEGORY_NAME=opendora-archive
CONTEXT_CHANNEL_ROUTER_ENABLED=true

DEEP_AGENT_ENABLED=true
DEEP_AGENT_MAX_SUBAGENTS=3

CODEX_BIN=codex
CODEX_TIMEOUT_MS=900000
CODEX_MODEL=
CODEX_SANDBOX=workspace-write
